<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_trailer_width"
    android:layout_height="@dimen/item_trailer_height"
    android:layout_margin="@dimen/item_trailer_margin">

    <RelativeLayout
        android:layout_width="@dimen/item_trailer_width"
        android:layout_height="@dimen/item_trailer_height">

        <ImageView
            android:id="@+id/trailer_cover_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/trailer_title_tv"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="#66000000"
            android:drawableRight="@drawable/ic_play_arrow"
            android:gravity="center_vertical"
            android:padding="@dimen/trailer_title_padding"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>